---
import Head from "./Head.astro";

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<html lang="en">
  <head>
    <Head title={title} />
  </head>
  <body>
    <slot />
  </body>
</html>

<style is:global>
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }
  html {
    font-family: "Carbon Bold";
    background: rgb(239, 239, 239);
  }
  @font-face {
    font-family: "Carbon Bold";
    src: url("/fonts/ShareTechMono.ttf") format("truetype");
    font-weight: normal;
    font-style: normal;
    font-display: swap;
  }
</style>
