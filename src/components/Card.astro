---
interface Props {
  title: string;
  body: string;
  href: string;
  badges: string[];
}

const { href, title, body, badges } = Astro.props;
---

<li class="link-card">
  <a href={href} target="_blank" rel="noopener noreferrer">
    <div class="title-container">
      <h2>
        {title}
        <span>&rarr;</span>
      </h2>
    </div>
    <div class="body-container">
      <p>
        {body}
      </p>
    </div>
    <div class="badge-container">
      {badges.map((badge) => <span class="badge">{badge}</span>)}
    </div>
  </a>
</li>

<style>
  li {
    filter: grayscale(1);
    transition: filter 0.2s ease-in-out;
  }
  li:hover {
    filter: grayscale(0);
  }
  /* Title container */
  .title-container {
    background-color: rgb(231, 123, 111);
    border-bottom: 2px solid black;
  }

  /* Common padding for containers */
  .body-container,
  .title-container,
  .badge-container {
    padding: 12px 16px;
  }

  /* Badges */
  .badge-container {
    display: flex;
    flex-wrap: wrap;
    gap: 6px;
  }

  .badge {
    font-size: 14px;
    font-family: monospace;
    border: 2px solid black;
    width: fit-content;
    padding: 0 4px;
    background-color: rgb(250, 230, 139);
  }

  /* Link cards */
  .link-card {
    list-style: none;
    display: flex;
    position: relative;
    transition: transform 0.2s ease-in-out;
  }

  .link-card::before {
    content: "";
    position: absolute;
    inset: 0;
    z-index: -1;
    transform: translate(4px, 4px);
    background-color: rgb(71, 123, 200);
    opacity: 0.8;
    transition:
      transform 0.2s ease-in-out,
      opacity 0.2s ease-in-out;
  }

  .link-card:hover::before {
    opacity: 1;
    transform: translate(0, 0);
  }

  .link-card:hover {
    transform: scale(1.01);
  }

  .link-card > a {
    border: 2px solid black;
    background-color: rgb(246, 211, 126);
    width: 100%;
    text-decoration: none;
    line-height: 1.4;
    color: black;
  }

  /* Typography */
  h2 {
    margin: 0;
    font-size: 1.25rem;
  }

  p {
    margin-top: 0.5rem;
    margin-bottom: 0;
    overflow: hidden;
    font-size: 16px;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
  }
</style>
